<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffdde2ce"
    android:id="@+id/emergency_add_dongtai_layout">
    <ImageView
        android:id="@+id/emergency_add_dongtai_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        />
    <TextView
        android:id="@+id/emergency_add_dongtai_nick_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/emergency_add_dongtai_image"
        android:layout_centerVertical = "true"
        android:text="昵称："/>
    <TextView
        android:id="@+id/emergency_add_dongtai_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/emergency_add_dongtai_nick_"
        android:layout_centerVertical = "true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical = "true"
        android:src="@android:drawable/ic_input_add"/>
</RelativeLayout>